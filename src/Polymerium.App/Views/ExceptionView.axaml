<husk:Page
    x:Class="Polymerium.App.Views.ExceptionView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:lang="https://github.com/d3ara1n/Polymerium/Languages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Polymerium.App.ViewModels"
    Padding="0"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:ExceptionViewModel"
    Header="{x:Static lang:Resources.ExceptionView_Title}"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel
            Margin="{StaticResource PageContentMargin}"
            Spacing="8">
            <TextBlock
                FontSize="{StaticResource ExtraLargeFontSize}"
                Text="{x:Static lang:Resources.ExceptionView_Subtitle}"
                TextWrapping="Wrap" />
            <TextBlock
                Text="{Binding Message}"
                TextWrapping="Wrap" />
            <Border
                Background="{StaticResource ControlBackgroundBrush}"
                CornerRadius="{StaticResource SmallCornerRadius}">
                <TextBlock
                    Margin="12"
                    Text="{Binding StackTrace}"
                    TextWrapping="Wrap" />
            </Border>
        </StackPanel>
    </ScrollViewer>
</husk:Page>
