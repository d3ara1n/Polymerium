<husk:Page xmlns="https://github.com/avaloniaui"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
           xmlns:icons="https://github.com/MahApps/IconPacks.Avalonia"
           xmlns:vm="using:Polymerium.App.ViewModels"
           xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
           xmlns:controls="clr-namespace:Polymerium.App.Controls"
           xmlns:async="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
           xmlns:m="clr-namespace:Polymerium.App.Models"
           xmlns:collections="clr-namespace:System.Collections;assembly=System.Runtime"
           xmlns:v="clr-namespace:Polymerium.App.Views"
           xmlns:lang="https://github.com/d3ara1n/Polymerium/Languages"
           mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
           x:Class="Polymerium.App.Views.LandingView"
           x:DataType="vm:LandingViewModel" Background="Transparent"
           IsHeaderVisible="False" Padding="{StaticResource PageHeaderlessContentMargin}">
    <StackPanel Spacing="24">

        <!-- Header Section -->
        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
            <Image Grid.Column="0" Source="/Assets/Icons/Ghost.png"
                   Height="48"
                   Width="48"
                   Opacity="0.9" />
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock Text="Welcome Back"
                           FontSize="{StaticResource ExtraLargeFontSize}"
                           FontWeight="{StaticResource ControlStrongFontWeight}">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                            <GradientStop Offset="0" Color="{DynamicResource Accent8Color}" />
                            <GradientStop Offset="1" Color="{DynamicResource Accent11Color}" />
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <TextBlock Text="Quick access to your gaming world"
                           Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
            </StackPanel>
            <Grid Grid.Column="2" ColumnDefinitions="*,*" ColumnSpacing="12">
                <husk:Card Grid.Column="0" Padding="12,8">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,Auto"
                          ColumnSpacing="12">
                        <icons:PackIconLucide Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Kind="Boxes"
                                              Height="{StaticResource ExtraLargeFontSize}"
                                              Width="{StaticResource ExtraLargeFontSize}"
                                              Foreground="{StaticResource ControlAccentForegroundBrush}" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding InstanceCount}"
                                   FontSize="{StaticResource LargeFontSize}"
                                   FontWeight="{StaticResource ControlStrongFontWeight}" />
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{x:Static lang:Resources.LandingView_OverviewInstancesLabelText}"
                                   FontSize="{StaticResource SmallFontSize}"
                                   Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                    </Grid>
                </husk:Card>
                <husk:Card Grid.Column="1" Padding="12,8">
                    <Grid ColumnDefinitions="Auto,*" RowDefinitions="*,Auto"
                          ColumnSpacing="12">
                        <icons:PackIconLucide Grid.Row="0" Grid.Column="0" Kind="Users"
                                              Height="{StaticResource ExtraLargeFontSize}"
                                              Width="{StaticResource ExtraLargeFontSize}"
                                              Foreground="{StaticResource ControlAccentForegroundBrush}" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AccountCount}"
                                   FontSize="{StaticResource LargeFontSize}"
                                   FontWeight="{StaticResource ControlStrongFontWeight}" />
                        <TextBlock Grid.Row="1" Grid.Column="1"
                                   Text="{x:Static lang:Resources.LandingView_OverviewAccountsLabelText}"
                                   FontSize="{StaticResource SmallFontSize}"
                                   Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                    </Grid>
                </husk:Card>
            </Grid>
        </Grid>

        <!-- Announcements -->
        <Panel IsVisible="False">

        </Panel>

        <!-- Content Area -->
        <Grid RowDefinitions="Auto,Auto,*" ColumnDefinitions="*,Auto" ColumnSpacing="12" RowSpacing="12">
            <!-- Continue Play -->
            <husk:PlaceholderPresenter Grid.Column="0" Grid.Row="0" Source="{Binding RecentPlay}">
                <husk:PlaceholderPresenter.SourceTemplate>
                    <DataTemplate DataType="m:RecentPlayModel">
                        <husk:Card CornerRadius="{StaticResource MediumCornerRadius}"
                                   BorderBrush="{StaticResource ControlAccentBorderBrush}" BorderThickness="2">
                            <Grid ColumnDefinitions="*,Auto">
                                <Grid Grid.Column="0" RowDefinitions="Auto,Auto" RowSpacing="12">
                                    <Grid Grid.Row="0" ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                        <Border Grid.Column="0" Width="{Binding $self.Bounds.Height}"
                                                CornerRadius="{StaticResource SmallCornerRadius}">
                                            <Border.Background>
                                                <ImageBrush Source="{Binding Thumbnail}" />
                                            </Border.Background>
                                        </Border>
                                        <StackPanel Grid.Column="1" Spacing="2">
                                            <TextBlock Text="{Binding Name}" FontSize="{StaticResource LargeFontSize}"
                                                       FontWeight="{StaticResource ControlStrongFontWeight}" />
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <husk:Tag Content="{Binding Version}" />
                                                <husk:Tag Content="{Binding LoaderLabel}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                    <husk:IconLabel Grid.Row="1" Text="{Binding LastPlayed}" Icon="Calendar"
                                                    Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                                </Grid>
                                <Grid Grid.Column="1" RowDefinitions="*,Auto" RowSpacing="12">
                                    <Button Grid.Row="0" Classes="Primary" Padding="12,8"
                                            Command="{Binding $parent[v:LandingView].((vm:LandingViewModel)DataContext).PlayCommand, FallbackValue={x:Null}}"
                                            CommandParameter="{Binding Key}">
                                        <husk:IconLabel Icon="Play"
                                                        Text="{x:Static lang:Resources.LandingView_RecentPlayButtonText}" />
                                    </Button>
                                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="8">
                                        <Button Grid.Column="0" Theme="{StaticResource OutlineButtonTheme}"
                                                Classes="Small"
                                                Command="{Binding $parent[v:LandingView].((vm:LandingViewModel)DataContext).ViewInstanceCommand, FallbackValue={x:Null}}"
                                                CommandParameter="{Binding Key}">
                                            <fi:SymbolIcon Symbol="Open" FontSize="{StaticResource SmallFontSize}" />
                                        </Button>
                                        <Button Grid.Column="1" Theme="{StaticResource OutlineButtonTheme}"
                                                Classes="Small"
                                                Command="{Binding $parent[v:LandingView].((vm:LandingViewModel)DataContext).OpenInstanceFolderCommand, FallbackValue={x:Null}}"
                                                CommandParameter="{Binding Key}">
                                            <fi:SymbolIcon Symbol="FolderOpen"
                                                           FontSize="{StaticResource SmallFontSize}" />
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </husk:Card>
                    </DataTemplate>
                </husk:PlaceholderPresenter.SourceTemplate>
                <husk:PlaceholderPresenter.Placeholder>
                    <!-- TODO: 添加没有最近游戏的提示面板 -->
                </husk:PlaceholderPresenter.Placeholder>
            </husk:PlaceholderPresenter>

            <!-- User Face -->
            <husk:PlaceholderPresenter Grid.Column="1" Grid.Row="0" Source="{Binding RecentPlay}">
                <husk:PlaceholderPresenter.SourceTemplate>
                    <DataTemplate DataType="m:RecentPlayModel">
                        <husk:PlaceholderPresenter Source="{Binding Account}">
                            <husk:PlaceholderPresenter.SourceTemplate>
                                <DataTemplate DataType="m:AccountModel">
                                    <husk:Card>
                                        <Grid RowDefinitions="*,Auto" ColumnDefinitions="Auto,*" RowSpacing="12"
                                              ColumnSpacing="12">
                                            <Border Grid.Row="0" Grid.Column="0" Width="{Binding $self.Bounds.Height}"
                                                    CornerRadius="{StaticResource SmallCornerRadius}">
                                                <Border.Background>
                                                    <ImageBrush async:ImageBrushLoader.Source="{Binding FaceUrl}" />
                                                </Border.Background>
                                            </Border>
                                            <StackPanel Grid.Row="0" Grid.Column="1">
                                                <TextBlock Text="{Binding UserName}"
                                                           FontWeight="{StaticResource ControlStrongFontWeight}" />
                                                <TextBlock Text="{Binding TypeName}"
                                                           Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                                            </StackPanel>
                                            <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Command="{Binding $parent[v:LandingView].((vm:LandingViewModel)DataContext).PickAccountCommand, FallbackValue={x:Null}}"
                                                    Theme="{StaticResource OutlineButtonTheme}" Classes="Small">
                                                <husk:IconLabel Icon="PersonBoard"
                                                                Text="{x:Static lang:Resources.LandingView_RecentAccountSwitchButtonText}" />
                                            </Button>
                                        </Grid>
                                    </husk:Card>
                                </DataTemplate>
                            </husk:PlaceholderPresenter.SourceTemplate>
                            <husk:PlaceholderPresenter.Placeholder>
                                <husk:Card>
                                    <Grid RowDefinitions="*,Auto" RowSpacing="12"
                                          ColumnSpacing="12">
                                        <husk:IconLabel Grid.Row="0" Icon="PersonLink" Text="No Account"
                                                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                                                        FontSize="{StaticResource LargeFontSize}"
                                                        HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        <Button Grid.Row="1"
                                                Command="{Binding $parent[v:LandingView].((vm:LandingViewModel)DataContext).PickAccountCommand, FallbackValue={x:Null}}"
                                                Theme="{StaticResource OutlineButtonTheme}" Classes="Small">
                                            <husk:IconLabel Icon="PersonBoard"
                                                            Text="{x:Static lang:Resources.LandingView_RecentAccountChooseButtonText}" />
                                        </Button>
                                    </Grid>
                                </husk:Card>
                            </husk:PlaceholderPresenter.Placeholder>
                        </husk:PlaceholderPresenter>
                    </DataTemplate>
                </husk:PlaceholderPresenter.SourceTemplate>
                <husk:PlaceholderPresenter.Placeholder>
                    <!-- TODO: 添加单个快捷操作的面板 -->
                </husk:PlaceholderPresenter.Placeholder>
            </husk:PlaceholderPresenter>


            <!-- Left Stack -->
            <StackPanel Grid.Column="0" Grid.Row="1" Spacing="12" IsVisible="False">
                <!-- Quick Actions -->
                <WrapPanel ItemSpacing="6" LineSpacing="6" ItemHeight="128" ItemWidth="168">
                    <husk:Card Padding="0">
                        <Grid RowDefinitions="*,Auto,Auto">
                            <TextBlock Grid.Row="0" Text="I have a hat."
                                       Margin="{StaticResource CardContentMargin}" />
                            <husk:Divider Grid.Row="1" />
                            <StackPanel Grid.Row="2" Margin="3">
                                <StackPanel.Styles>
                                    <Style Selector="Button">
                                        <Setter Property="Theme" Value="{StaticResource GhostButtonTheme}" />
                                        <Setter Property="Padding" Value="8,4" />
                                        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}" />
                                        <Setter Property="CornerRadius">
                                            <MultiBinding
                                                Converter="{x:Static husk:CornerRadiusConverters.ToInnerRadiusMulti}">
                                                <Binding Path="CornerRadius"
                                                         RelativeSource="{RelativeSource FindAncestor, AncestorType=husk:Card}" />
                                                <Binding Path="Margin"
                                                         RelativeSource="{RelativeSource FindAncestor, AncestorType=StackPanel}" />
                                            </MultiBinding>
                                        </Setter>
                                    </Style>
                                </StackPanel.Styles>
                                <Button>
                                    <husk:IconLabel Icon="HandLeft" Text="Steal" />
                                </Button>
                            </StackPanel>
                        </Grid>
                    </husk:Card>
                </WrapPanel>
            </StackPanel>

            <!-- Right Stack -->
            <StackPanel Grid.Column="1" Grid.Row="1" Spacing="12">
                <husk:Card>
                    <StackPanel Spacing="12">
                        <!-- Total Play Time -->
                        <StackPanel Spacing="6">
                            <TextBlock Text="{x:Static lang:Resources.LandingView_StatisticsHoursLabelText}"
                                       FontSize="{StaticResource MediumFontSize}"
                                       Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                            <TextBlock
                                Text="{Binding TotalPlayHours, StringFormat={}{0:0.0} hrs, FallbackValue=45.3 hrs}"
                                FontSize="{StaticResource ExtraLargeFontSize}"
                                FontWeight="{StaticResource ControlStrongFontWeight}" />
                        </StackPanel>

                        <husk:Divider Orientation="Horizontal" Height="1" />

                        <!-- Sessions -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                            <StackPanel Grid.Column="0" Spacing="4">
                                <TextBlock Text="{x:Static lang:Resources.LandingView_StatisticsSessionsLabelText}"
                                           FontSize="{StaticResource MediumFontSize}"
                                           Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                                <TextBlock Text="{Binding TotalSessions, FallbackValue=12}"
                                           FontSize="{StaticResource LargeFontSize}"
                                           FontWeight="{StaticResource ControlStrongFontWeight}" />
                            </StackPanel>

                            <StackPanel Grid.Column="1" Spacing="4">
                                <TextBlock Text="{x:Static lang:Resources.LandingView_StatisticsActiveDaysLabelText}"
                                           FontSize="{StaticResource MediumFontSize}"
                                           Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                                <TextBlock Text="{Binding ActiveDays, FallbackValue=6}"
                                           FontSize="{StaticResource LargeFontSize}"
                                           FontWeight="{StaticResource ControlStrongFontWeight}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </husk:Card>
            </StackPanel>

            <!-- Remaining Stack -->
            <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                <!-- News Section -->
                <husk:LazyContainer Source="{Binding MinecraftNews}">
                    <husk:LazyContainer.SourceTemplate>
                        <DataTemplate DataType="collections:IList">
                            <DockPanel VerticalSpacing="8" MinHeight="24">
                                <TextBlock DockPanel.Dock="Top"
                                           Text="{x:Static lang:Resources.LandingView_RecentReleasesLabelText}"
                                           FontSize="{StaticResource LargeFontSize}"
                                           FontWeight="{StaticResource ControlStrongFontWeight}" />
                                <ItemsControl ItemsSource="{Binding}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <controls:WaterfallPanel ColumnWidth="262" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="m:MinecraftReleasePatchModel">
                                            <husk:Card>
                                                <Grid RowDefinitions="Auto,*" RowSpacing="12">
                                                    <husk:ConstrainedBox Grid.Row="0"
                                                                         AspectRatio="117:50">
                                                        <Border
                                                            CornerRadius="{StaticResource MediumCornerRadius}">
                                                            <Border.Background>
                                                                <ImageBrush
                                                                    async:ImageBrushLoader.Source="{Binding Cover}"
                                                                    Stretch="UniformToFill" />
                                                            </Border.Background>
                                                        </Border>
                                                    </husk:ConstrainedBox>
                                                    <StackPanel Grid.Row="1" Spacing="4">
                                                        <TextBlock Text="{Binding Title}"
                                                                   FontSize="{StaticResource LargeFontSize}"
                                                                   FontWeight="{StaticResource ControlStrongFontWeight}"
                                                                   TextWrapping="Wrap" />
                                                        <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
                                                        <DockPanel HorizontalSpacing="8">
                                                            <husk:Tag DockPanel.Dock="Right" Classes="Small">
                                                                <TextBlock Text="{Binding Category}" />
                                                            </husk:Tag>
                                                            <husk:IconLabel Icon="Clock" Text="{Binding PublishedAt}"
                                                                            FontSize="{StaticResource SmallFontSize}"
                                                                            Foreground="{StaticResource ControlSecondaryForegroundBrush}" />
                                                        </DockPanel>
                                                    </StackPanel>
                                                </Grid>
                                            </husk:Card>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </DockPanel>
                        </DataTemplate>
                    </husk:LazyContainer.SourceTemplate>
                </husk:LazyContainer>
            </StackPanel>
        </Grid>
    </StackPanel>
</husk:Page>
