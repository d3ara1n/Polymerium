<controls:ScopedPage xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:icons="https://github.com/MahApps/IconPacks.Avalonia"
                     xmlns:controls="using:Polymerium.App.Controls"
                     xmlns:vm="using:Polymerium.App.ViewModels"
                     mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     x:Class="Polymerium.App.Views.InstanceCreationView" x:DataType="vm:InstanceCreationViewModel">
    <controls:ScopedPage.Header>
        <DockPanel>
            <Button DockPanel.Dock="Right" Classes="Primary" Content="Create" Command="{Binding CreateCommand}" />
            <TextBlock Text="Create Empty Instance" Theme="{StaticResource PageHeaderTextBlockTheme}" />
        </DockPanel>
    </controls:ScopedPage.Header>
    <Grid ColumnDefinitions="Auto,32,*" Margin="32">
        <Grid Grid.Column="0" Margin="24">
            <husk:DropZone Width="108" Height="108" BorderBrush="{x:Null}" Padding="8"
                           Background="{DynamicResource Layer0BackgroundBrush}"
                           Model="{Binding Thumbnail,Mode=OneWayToSource}"
                           CornerRadius="{StaticResource MediumCornerRadius}" DragOver="DropZone_OnDragOver"
                           Drop="DropZone_OnDrop">
                <husk:DropZone.Effect>
                    <DropShadowEffect Opacity="0.1" />
                </husk:DropZone.Effect>
                <Panel>
                    <Border Name="ThumbnailBox" />
                    <Panel Name="DropPanel" IsHitTestVisible="False">
                        <Panel.Transitions>
                            <Transitions>
                                <DoubleTransition Property="Opacity"
                                                  Duration="{StaticResource ControlFasterAnimationDuration}" />
                            </Transitions>
                        </Panel.Transitions>
                        <Rectangle Stroke="{DynamicResource ControlSecondaryForegroundBrush}" StrokeThickness="3"
                                   StrokeDashArray="4,2" RadiusX="3" RadiusY="3" />

                        <icons:PackIconLucide Name="Icon" Kind="Image" Margin="24"
                                              Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                    </Panel>
                </Panel>
                <husk:DropZone.Styles>
                    <Style Selector=":not(:dragover) Panel#DropPanel">
                        <Setter Property="Opacity" Value="{StaticResource Overlay1Opacity}" />
                    </Style>
                    <Style Selector=":dragover Panel#DropPanel">
                        <Setter Property="Opacity" Value="1" />
                    </Style>
                    <Style Selector=":drop Border#ThumbnailBox">
                        <Setter Property="Background">
                            <ImageBrush Source="{Binding Thumbnail}" />
                        </Setter>
                    </Style>
                    <Style Selector=":drop icons|PackIconLucide#Icon">
                        <Setter Property="IsVisible" Value="False" />
                    </Style>
                </husk:DropZone.Styles>
            </husk:DropZone>
        </Grid>
        <StackPanel Grid.Column="2" VerticalAlignment="Center" MinWidth="164">
            <TextBlock Text="Name" />
            <TextBox Watermark="{Binding VersionName}" Text="{Binding DisplayName,Mode=TwoWay}">
                <TextBox.InnerLeftContent>
                    <StackPanel Orientation="Horizontal">
                        <icons:PackIconLucide Margin="10,0"
                                              Foreground="{DynamicResource ControlSecondaryForegroundBrush}"
                                              Kind="Tag" Height="{StaticResource MediumFontSize}"
                                              VerticalAlignment="Center" />
                        <husk:Divider Orientation="Vertical" />
                    </StackPanel>
                </TextBox.InnerLeftContent>
            </TextBox>
            <TextBlock Text="Version" />
            <husk:SkeletonControl IsLoading="{Binding IsVersionLoaded,Converter={x:Static BoolConverters.Not}}"
                                  CornerRadius="{StaticResource SmallCornerRadius}">
                <TextBox Text="{Binding VersionName,Mode=TwoWay}">
                    <TextBox.InnerLeftContent>
                        <StackPanel Orientation="Horizontal">
                            <icons:PackIconLucide Margin="10,0"
                                                  Foreground="{DynamicResource ControlSecondaryForegroundBrush}"
                                                  Kind="Compass" Height="{StaticResource MediumFontSize}"
                                                  VerticalAlignment="Center" />
                            <husk:Divider Orientation="Vertical" />
                        </StackPanel>
                    </TextBox.InnerLeftContent>
                    <TextBox.InnerRightContent>
                        <Button Margin="4" Command="{Binding PickVersionCommand}">
                            <icons:PackIconLucide Kind="Pickaxe" Height="{StaticResource MediumFontSize}" />
                        </Button>
                    </TextBox.InnerRightContent>
                </TextBox>
            </husk:SkeletonControl>
        </StackPanel>
    </Grid>
</controls:ScopedPage>