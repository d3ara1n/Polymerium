<husk:Page
    x:Class="Polymerium.App.Views.PageNotReachedView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:Polymerium.App.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="vm:PageNotReachedViewModel"
    Header="Page Cannot Be Reached"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <StackPanel.Effect>
            <DropShadowEffect BlurRadius="6" Opacity="0.1" />
        </StackPanel.Effect>
        <Image
            Width="128"
            Height="128"
            HorizontalAlignment="Center"
            Source="/Assets/Icons/Desert.png" />
        <TextBlock
            Margin="48,12,48,12"
            FontSize="24"
            FontWeight="{StaticResource ControlStrongFontWeight}"
            Text="{Binding Message}"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />
    </StackPanel>
</husk:Page>
