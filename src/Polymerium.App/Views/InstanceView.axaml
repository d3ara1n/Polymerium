        <husk:DropContainer
            DragOver="DropContainer_OnDragOver"
            Drop="DropContainer_OnDrop">
            <husk:DropContainer.Overlay>
                <Panel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Rectangle
                        Fill="{StaticResource ControlInteractiveBackgroundBrush}"
                        RadiusX="6"
                        RadiusY="6"
                        Stroke="{StaticResource ControlInteractiveBorderBrush}"
                        StrokeDashArray="6,2"
                        StrokeJoin="Round"
                        StrokeLineCap="Round"
                        StrokeThickness="2" />
                    <StackPanel
                        Margin="48,36"
                        Opacity="{StaticResource Overlay1Opacity}"
                        Spacing="12">
                        <icons:PackIconLucide
                            Width="42"
                            Height="42"
                            HorizontalAlignment="Center"
                            Foreground="{StaticResource ControlWhiteForegroundBrush}"
                            Kind="FilePlus" />
                    </StackPanel>
                </Panel>
            </husk:DropContainer.Overlay>
            <Grid ColumnDefinitions="Auto,*">
                <Border
                    Grid.Column="0"
                    Width="64"
                    Margin="12,12,0,12"
                    Background="{StaticResource LayerBackgroundBrush}"
                    CornerRadius="{StaticResource MediumCornerRadius}">
                    <Grid
                        RowDefinitions="Auto,*,Auto,Auto"
                        RowSpacing="12">
                        <Button
                            Grid.Row="0"
                            Margin="12"
                            Command="{Binding $parent[husk:Frame].GoBackCommand}">
                            <icons:PackIconLucide Kind="ArrowLeft" />
                        </Button>
                        <ListBox
                            x:Name="EntryBox"
                            Grid.Row="1"
                            Padding="0"
                            ClipToBounds="False"
                            ItemsSource="{Binding PageEntries}"
                            SelectedValue="{Binding SelectedPage}"
                            SelectionChanged="EntryBox_OnSelectionChanged"
                            SelectionMode="Single">
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="m:InstanceSubpageEntryModel">
                                    <icons:PackIconLucide
                                        Height="18"
                                        HorizontalAlignment="Center"
                                        Kind="{Binding Icon}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerTheme>
                                <ControlTheme TargetType="ListBoxItem">
                                    <Setter Property="Cursor" Value="Hand" />
                                    <Setter Property="ClipToBounds" Value="False" />
                                    <Setter Property="Template">
                                        <ControlTemplate>
                                            <Panel Background="{StaticResource TransparentBrush}">
                                                <Border
                                                    Name="Indicator"
                                                    Background="{StaticResource ControlAccentTranslucentHalfBackgroundBrush}"
                                                    Opacity="0">
                                                    <Border.Transitions>
                                                        <Transitions>
                                                            <DoubleTransition
                                                                Easing="CubicEaseOut"
                                                                Property="Opacity"
                                                                Duration="{StaticResource ControlFasterAnimationDuration}" />
                                                        </Transitions>
                                                    </Border.Transitions>
                                                </Border>
                                                <Border
                                                    Name="Lock"
                                                    BorderBrush="{StaticResource ControlAccentInteractiveBorderBrush}"
                                                    BorderThickness="3,0"
                                                    Opacity="0"
                                                    RenderTransform="scaleX(1.1)">
                                                    <Border.Transitions>
                                                        <Transitions>
                                                            <DoubleTransition
                                                                Property="Opacity"
                                                                Duration="{StaticResource ControlFasterAnimationDuration}" />
                                                            <TransformOperationsTransition
                                                                Easing="CubicEaseOut"
                                                                Property="RenderTransform"
                                                                Duration="{StaticResource ControlFasterAnimationDuration}" />
                                                        </Transitions>
                                                    </Border.Transitions>
                                                </Border>
                                                <ContentPresenter
                                                    Name="PART_ContentPresenter"
                                                    Margin="8"
                                                    Content="{TemplateBinding Content}"
                                                    ContentTemplate="{TemplateBinding ContentTemplate}">
                                                    <ContentPresenter.Transitions>
                                                        <Transitions>
                                                            <BrushTransition
                                                                Property="Foreground"
                                                                Duration="{StaticResource ControlFasterAnimationDuration}" />
                                                        </Transitions>
                                                    </ContentPresenter.Transitions>
                                                </ContentPresenter>
                                            </Panel>
                                        </ControlTemplate>
                                    </Setter>
                                    <Style Selector="^:selected /template/ ContentPresenter#PART_ContentPresenter">
                                        <Setter Property="Foreground" Value="{StaticResource ControlAccentForegroundBrush}" />
                                    </Style>
                                    <Style Selector="^:pointerover /template/ Border#Indicator">
                                        <Setter Property="Opacity" Value="1" />
                                    </Style>
                                    <Style Selector="^:selected /template/ Border#Indicator">
                                        <Setter Property="Opacity" Value="1" />
                                    </Style>
                                    <Style Selector="^:selected /template/ Border#Lock">
                                        <Setter Property="Opacity" Value="1" />
                                        <Setter Property="RenderTransform" Value="scaleX(1.0)" />
                                    </Style>
                                </ControlTheme>
                            </ListBox.ItemContainerTheme>
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Spacing="4" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                        </ListBox>
                        <StackPanel
                            Grid.Row="2"
                            Margin="12,0"
                            Spacing="2">
                            <Button
                                Command="{Binding ImportFromFileCommand}"
                                CornerRadius="{Binding Source={StaticResource MediumCornerRadius}, Converter={x:Static husk:CornerRadiusConverters.Upper}}"
                                ToolTip.Tip="Import asset from file">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                        <Binding
                                            Converter="{x:Static husk:ObjectConverters.NotMatch}"
                                            ConverterParameter="Updating"
                                            Path="State" />
                                        <Binding
                                            Converter="{x:Static husk:ObjectConverters.NotMatch}"
                                            ConverterParameter="Deploying"
                                            Path="State" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                                <icons:PackIconLucide
                                    Width="{StaticResource MediumFontSize}"
                                    Height="{StaticResource MediumFontSize}"
                                    Kind="FilePlus" />
                            </Button>
                            <Button
                                Command="{Binding $parent[app:MainWindow].((app:MainWindowContext)DataContext).ExportInstanceCommand, FallbackValue={x:Null}}"
                                CommandParameter="{Binding Basic.Key}"
                                CornerRadius="0"
                                ToolTip.Tip="Export modpack to file">
                                <Button.IsEnabled>
                                    <MultiBinding Converter="{x:Static BoolConverters.And}">
                                        <Binding
                                            Converter="{x:Static husk:ObjectConverters.NotMatch}"
                                            ConverterParameter="Updating"
                                            Path="State" />
                                        <Binding
                                            Converter="{x:Static husk:ObjectConverters.NotMatch}"
                                            ConverterParameter="Deploying"
                                            Path="State" />
                                    </MultiBinding>
                                </Button.IsEnabled>
                                <icons:PackIconLucide
                                    Width="{StaticResource MediumFontSize}"
                                    Height="{StaticResource MediumFontSize}"
                                    Kind="FolderArchive" />
                            </Button>
                            <Button
                                Command="{Binding OpenFolderCommand}"
                                CornerRadius="{Binding Source={StaticResource MediumCornerRadius}, Converter={x:Static husk:CornerRadiusConverters.Lower}}"
                                ToolTip.Tip="Open instance folder">
                                <icons:PackIconLucide
                                    Width="{StaticResource MediumFontSize}"
                                    Height="{StaticResource MediumFontSize}"
                                    Kind="FolderOpen" />
                            </Button>
                        </StackPanel>
                        <Border
                            Grid.Row="3"
                            Height="{Binding $self.Bounds.Width}"
                            Margin="8"
                            BackgroundSizing="InnerBorderEdge"
                            BorderBrush="{StaticResource ControlBorderBrush}"
                            BorderThickness="2"
                            CornerRadius="{StaticResource SmallCornerRadius}"
                            ToolTip.Tip="{Binding Basic.Name}">
                            <Border.Background>
                                <ImageBrush Source="{Binding Basic.Thumbnail}" />
                            </Border.Background>
                        </Border>
                    </Grid>
                </Border>
                <Panel Grid.Column="1">
                    <husk:Frame x:Name="Frame" />
                </Panel>
            </Grid>
        </husk:DropContainer>
    </Panel>
</controls:ScopedPage>
