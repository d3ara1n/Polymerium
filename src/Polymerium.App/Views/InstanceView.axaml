<controls:ScopedPage xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:icons="https://github.com/MahApps/IconPacks.Avalonia"
                     xmlns:controls="using:Polymerium.App.Controls" Header="Instance" Padding="0"
                     mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="600"
                     x:Class="Polymerium.App.Views.InstanceView">
    <Panel>

        <ScrollViewer>
            <StackPanel>
                <Panel ClipToBounds="True">
                    <!-- Pick randomly from build/screenshots(pointing to persist/screenshots) -->
                    <Image Source="/Assets/Images/Wallpaper.png" Stretch="UniformToFill" Opacity="0.3"
                           VerticalAlignment="Top" RenderTransform="scale(1.2)"
                           Height="{Binding #Header.Bounds.Bottom}">
                        <Image.Effect>
                            <BlurEffect Radius="5" />
                        </Image.Effect>
                    </Image>
                    <StackPanel Name="Header" Margin="{StaticResource PageContentMargin}" Spacing="8">
                        <TextBlock Text="Hello Kitty" FontSize="36" Margin="0,24" />
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Right" Spacing="8" Orientation="Horizontal">
                                <DropDownButton Padding="0">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <Image Source="/Assets/Images/Placeholders/steve_face.png" Height="32"
                                               VerticalAlignment="Center" />
                                        <TextBlock Text="Steve (Microsoft)" VerticalAlignment="Center" />
                                    </StackPanel>
                                </DropDownButton>
                                <Button Classes="Primary">
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <icons:PackIconLucide Kind="Play" Height="12" VerticalAlignment="Center" />
                                        <TextBlock Text="PLAY" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <Button>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <icons:PackIconLucide Kind="Link" Height="12" VerticalAlignment="Center" />
                                        <TextBlock Text="CurseForge" />
                                    </StackPanel>
                                </Button>
                                <Button>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <icons:PackIconLucide Kind="Settings2" Height="12"
                                                              VerticalAlignment="Center" />
                                        <TextBlock Text="Configure" />
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </DockPanel>
                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                            <TextBlock>
                                <Run Text="Total Played:"
                                     Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                                <Run Text="12.2 days" />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Last Played:"
                                     Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                                <Run Text="10 hrs ago" />
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Panel>
                <Panel Margin="{StaticResource PageHeaderlessContentMargin}">
                    <Rectangle Fill="Black" Height="800" />
                </Panel>
            </StackPanel>
        </ScrollViewer>
    </Panel>
</controls:ScopedPage>