<controls:Subpage xmlns="https://github.com/avaloniaui"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
                  xmlns:fi="using:FluentIcons.Avalonia"
                  xmlns:controls="using:Polymerium.App.Controls"
                  xmlns:huskc="https://github.com/d3ara1n/Huskui.Avalonia/Converters"
                  xmlns:icons="https://github.com/MahApps/IconPacks.Avalonia"
                  xmlns:v="using:Polymerium.App.Views"
                  xmlns:vm="using:Polymerium.App.ViewModels"
                  xmlns:m="using:Polymerium.App.Models"
                  mc:Ignorable="d" d:DesignWidth="780" d:DesignHeight="566"
                  x:Class="Polymerium.App.Views.InstanceHomeView" x:DataType="vm:InstanceHomeViewModel">
    <controls:Subpage.Resources>
        <ControlTheme x:Key="SectionHeaderButtonTheme" TargetType="Button" BasedOn="{StaticResource GhostButtonTheme}">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="12,4" />
        </ControlTheme>
        <ControlTheme x:Key="LaunchButtonTheme" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="CornerRadius" Value="{StaticResource MediumCornerRadius}" />
            <Setter Property="BorderThickness" Value="0,0,0,6" />
            <Setter Property="RenderTransformOrigin" Value="50%,100%" />
            <Setter Property="Transitions">
                <Transitions>
                    <TransformOperationsTransition Property="RenderTransform"
                                                   Duration="{StaticResource ControlFastestAnimationDuration}" />
                    <ThicknessTransition Property="BorderThickness"
                                         Duration="{StaticResource ControlFastestAnimationDuration}" />
                </Transitions>
            </Setter>

            <Style Selector="^:pressed">
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="RenderTransform" Value="scaleY(0.98)" />
            </Style>
        </ControlTheme>
    </controls:Subpage.Resources>
    <Grid MaxWidth="1024" MaxHeight="648">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="24" />
            <RowDefinition Height="230" />
            <RowDefinition Height="24" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition Width="*" MinWidth="230" />
        </Grid.ColumnDefinitions>
        <husk:Card Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="0" Padding="0"
                   Background="{DynamicResource LayerSolidBackgroundBrush}">
            <Panel>
                <Border CornerRadius="{StaticResource MediumCornerRadius}">
                    <Border.Background>
                        <ImageBrush Stretch="UniformToFill"
                                    Source="{Binding Screenshot}" />
                    </Border.Background>
                    <Border.OpacityMask>
                        <LinearGradientBrush StartPoint="0%,10%"
                                             EndPoint="100%,100%">
                            <GradientStop Offset="0"
                                          Color="#3F000000" />
                            <GradientStop Offset="0.5"
                                          Color="#6F000000" />
                            <GradientStop Offset="1" Color="#DF000000" />
                        </LinearGradientBrush>
                    </Border.OpacityMask>
                </Border>
                <Grid RowDefinitions="Auto,8,Auto" Margin="24">
                    <husk:Tag Grid.Row="0" Content="Overview" />
                    <TextBlock Grid.Row="2" Text="{Binding Basic.Name}" MaxLines="2" TextWrapping="Wrap"
                               TextTrimming="CharacterEllipsis" FontSize="36" />
                </Grid>
            </Panel>
        </husk:Card>
        <husk:BusyContainer Grid.Row="0" Grid.Column="4"
                            IsBusy="{Binding State,Converter={x:Static huskc:ObjectConverters.Match},ConverterParameter=Updating}"
                            Background="{DynamicResource Layer0BackgroundBrush}"
                            BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1"
                            CornerRadius="{StaticResource MediumCornerRadius}">
            <husk:Card BorderThickness="0" Background="{x:Null}" BorderBrush="{x:Null}">
                <Grid RowDefinitions="Auto,8,*,8,Auto,8,Auto,8,Auto">
                    <Grid Grid.Row="0" ColumnDefinitions="Auto,8,*,8,Auto">
                        <icons:PackIconLucide Grid.Column="0"
                                              Foreground="{DynamicResource ControlAccentForegroundBrush}"
                                              Kind="Boxes" Height="{StaticResource LargeFontSize}" />
                        <TextBlock Grid.Column="2" Text="Setup" FontWeight="Bold" />
                        <Button Grid.Column="4" Theme="{StaticResource SectionHeaderButtonTheme}"
                                Command="{Binding $parent[v:InstanceView].NavigateCommand}"
                                CommandParameter="{x:Type v:InstanceSetupView}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="Details" FontSize="{StaticResource SmallFontSize}" />
                                <fi:SymbolIcon Symbol="ArrowRight" FontSize="{StaticResource SmallFontSize}" />
                            </StackPanel>
                        </Button>
                    </Grid>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="{Binding PackageCount,FallbackValue=114514}"
                                   FontSize="{StaticResource ExtraLargeFontSize}" />
                        <TextBlock Text="packages" VerticalAlignment="Bottom"
                                   Foreground="{DynamicResource ControlSecondaryForegroundBrush}" Margin="4" />
                    </StackPanel>
                    <husk:Divider Grid.Row="4" />
                    <Grid Grid.Row="6" ColumnDefinitions="Auto,8,*,8,Auto">
                        <TextBlock Grid.Column="0" Text="Type"
                                   Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                        <TextBlock Grid.Column="4" Text="{Binding Basic.LoaderLabel,FallbackValue=Type}" />
                    </Grid>
                    <Grid Grid.Row="8" ColumnDefinitions="Auto,8,*,8,Auto">
                        <TextBlock Grid.Column="0" Text="Version"
                                   Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                        <TextBlock Grid.Column="4" Text="{Binding Basic.Version,FallbackValue=Version}" />
                    </Grid>
                </Grid>
            </husk:Card>
            <husk:BusyContainer.PendingContent>
                <StackPanel VerticalAlignment="Center" Spacing="8">
                    <husk:ProgressRing Width="56" Height="56" IsIndeterminate="True" />
                    <TextBlock Text="Updating In Progress" HorizontalAlignment="Center" FontWeight="Bold" />
                </StackPanel>
            </husk:BusyContainer.PendingContent>
        </husk:BusyContainer>
        <Grid Grid.Row="2" Grid.Column="0" Grid.RowSpan="3" RowDefinitions="Auto,12,*">
            <Grid Grid.Row="0" ColumnDefinitions="*,12,Auto">
                <TextBlock Grid.Column="0" Text="Activities" FontSize="{StaticResource LargeFontSize}"
                           FontWeight="Bold" />
                <Button Grid.Column="2" Grid.Row="0" Theme="{StaticResource SectionHeaderButtonTheme}"
                        Command="{Binding $parent[v:InstanceView].NavigateCommand}"
                        CommandParameter="{x:Type v:InstancePropertyView}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="See More" FontSize="{StaticResource SmallFontSize}" />
                        <fi:SymbolIcon Symbol="ArrowRight" FontSize="{StaticResource SmallFontSize}" />
                    </StackPanel>
                </Button>
            </Grid>
            <husk:Card Grid.Row="2" Background="{DynamicResource Layer0BackgroundBrush}">
                <Grid RowDefinitions="*,12,Auto">
                    <Panel Grid.Row="0" Width="122" Height="122">
                        <husk:ProgressRing ShowProgressText="False" Value="37" />
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock TextAlignment="Center">
                                <Run Text="Total Hours" />
                                <LineBreak />
                                <Run Text="12.4" FontSize="{StaticResource ExtraLargeFontSize}" />
                            </TextBlock>
                        </StackPanel>
                    </Panel>
                    <StackPanel Grid.Row="2" Spacing="8">
                        <husk:Card Background="Transparent">
                            <Grid ColumnDefinitions="Auto,4,*,4,Auto">
                                <fi:SymbolIcon Grid.Column="0" Symbol="HourglassHalf"
                                               FontSize="{StaticResource MediumFontSize}" />
                                <TextBlock Grid.Column="4" Text="54.1 mins" />
                            </Grid>
                        </husk:Card>
                        <husk:Card Background="Transparent">
                            <Grid ColumnDefinitions="Auto,4,*,4,Auto">
                                <fi:SymbolIcon Grid.Column="0" Symbol="Clock"
                                               FontSize="{StaticResource MediumFontSize}" />
                                <TextBlock Grid.Column="4" Text="one day ago" />
                            </Grid>
                        </husk:Card>
                    </StackPanel>
                </Grid>
            </husk:Card>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" RowDefinitions="Auto,12,*">
            <Grid Grid.Row="0" ColumnDefinitions="*,12,Auto">
                <TextBlock Grid.Column="0" Text="Widgets" FontSize="{StaticResource LargeFontSize}"
                           FontWeight="Bold" />
                <Button Grid.Column="2" Grid.Row="0" Theme="{StaticResource SectionHeaderButtonTheme}"
                        Command="{Binding $parent[v:InstanceView].NavigateCommand}"
                        CommandParameter="{x:Type v:InstancePropertyView}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="See More" FontSize="{StaticResource SmallFontSize}" />
                        <fi:SymbolIcon Symbol="ArrowRight" FontSize="{StaticResource SmallFontSize}" />
                    </StackPanel>
                </Button>
            </Grid>
            <ScrollViewer Grid.Row="2" HorizontalScrollBarVisibility="Auto" Margin="0,0,0,-12">
                <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,0,0,12">
                    <husk:Card Width="198" Background="{DynamicResource Layer0BackgroundBrush}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Working" FontSize="{StaticResource ExtraLargeFontSize}"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                            <TextBlock Text="Never" Foreground="{DynamicResource ControlSecondaryForegroundBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </husk:Card>
                    <husk:Card Width="198" Background="{DynamicResource Layer0BackgroundBrush}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="In" FontSize="{StaticResource ExtraLargeFontSize}"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                            <TextBlock Text="Be" Foreground="{DynamicResource ControlSecondaryForegroundBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </husk:Card>
                    <husk:Card Width="198" Background="{DynamicResource Layer0BackgroundBrush}">
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Progress" FontSize="{StaticResource ExtraLargeFontSize}"
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                            <TextBlock Text="Finished" Foreground="{DynamicResource ControlSecondaryForegroundBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </husk:Card>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" ColumnDefinitions="*,8,Auto" RowDefinitions="Auto,12,*">
            <TextBlock Grid.Row="0" Text="Launch Pad" FontSize="{StaticResource LargeFontSize}"
                       FontWeight="Bold" />
            <husk:Card Grid.Column="0" Grid.Row="2" Padding="0" Background="{DynamicResource Layer0BackgroundBrush}">
                <husk:SwitchPresenter Value="{Binding State}" TargetType="m:InstanceState">
                    <husk:SwitchCase Value="Idle">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"
                                    Spacing="8">
                            <fi:SymbolIcon Symbol="CheckmarkCircle" IconVariant="Filled"
                                           FontSize="{StaticResource MediumFontSize}" VerticalAlignment="Center"
                                           Foreground="{DynamicResource ControlSuccessForegroundBrush}" />
                            <TextBlock Text="Everything is ready"
                                       Foreground="{DynamicResource ControlSuccessForegroundBrush}" />
                        </StackPanel>
                    </husk:SwitchCase>
                    <husk:SwitchCase Value="Deploying">
                        <Panel Margin="8">
                            <ProgressBar CornerRadius="{StaticResource MediumCornerRadius}" Value="37"
                                         IsIndeterminate="True" />
                            <TextBlock Text="Downloading files..." HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                        </Panel>
                    </husk:SwitchCase>
                </husk:SwitchPresenter>
            </husk:Card>
            <husk:Card Grid.Column="2" Grid.Row="0" Grid.RowSpan="3" Padding="0"
                       Background="{DynamicResource Layer0BackgroundBrush}">
                <Grid ColumnDefinitions="Auto,0,Auto">
                    <Button Grid.Column="0" Margin="8"
                            Theme="{StaticResource LaunchButtonTheme}"
                            Command="{Binding PlayCommand}"
                            Background="{DynamicResource ControlAccentBackgroundBrush}"
                            BorderBrush="{DynamicResource ControlTranslucentAccentBackgroundBrush}">
                        <StackPanel VerticalAlignment="Center">
                            <fi:SymbolIcon Symbol="Rocket" HorizontalAlignment="Center" FontSize="20" />
                            <TextBlock Text="LAUNCH" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Button>
                    <Grid Grid.Column="2" RowDefinitions="Auto,0,*">
                        <Border Grid.Row="0" Background="{DynamicResource ControlBackgroundBrush}"
                                CornerRadius="0,0,6,6" Margin="0,0,8,0" HorizontalAlignment="Center">
                            <TextBlock Text="Managed" Margin="12,6" />
                        </Border>
                        <Button Grid.Row="2" Theme="{StaticResource GhostButtonTheme}"
                                Command="{Binding SwitchAccountCommand}"
                                Padding="12,6" Margin="0,8,8,8" BorderBrush="{DynamicResource ControlBorderBrush}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource MediumCornerRadius}">
                            <Grid ColumnDefinitions="Auto,8,*" RowDefinitions="Auto,*,Auto">
                                <Border Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Height="36" Width="36">
                                    <Border.Background>
                                        <ImageBrush Source="/Assets/Images/Placeholders/Steve_Face.png"
                                                    Stretch="Fill" />
                                    </Border.Background>
                                </Border>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Steve" FontWeight="Bold"
                                           FontSize="{StaticResource LargeFontSize}" />
                                <TextBlock Grid.Row="2" Grid.Column="2" Text="Microsoft"
                                           Foreground="{DynamicResource ControlSecondaryForegroundBrush}" />
                            </Grid>
                        </Button>
                    </Grid>
                </Grid>
            </husk:Card>
        </Grid>
    </Grid>
</controls:Subpage>