<controls:ScopedPage xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
                     xmlns:vm="using:Polymerium.App.ViewModels"
                     xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
                     xmlns:cp="using:Polymerium.App.Components"
                     xmlns:m="using:Polymerium.App.Models"
                     xmlns:huskc="https://github.com/d3ara1n/Huskui.Avalonia/Converters"
                     xmlns:labs="using:Avalonia.Labs.Controls"
                     xmlns:icons="https://github.com/MahApps/IconPacks.Avalonia"
                     xmlns:controls="using:Polymerium.App.Controls" Header="Instance Setup"
                     mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600" Padding="0"
                     x:Class="Polymerium.App.Views.InstanceSetupView" x:DataType="vm:InstanceSetupViewModel"
                     ScrollViewer.VerticalScrollBarVisibility="Disabled">
    <controls:ScopedPage.Resources>
        <DataTemplate x:Key="ActivePackageDataTemplate" DataType="m:InstancePackageModel">
            <husk:SkeletonControl Margin="0,2,0,2"
                                  CornerRadius="{StaticResource MediumCornerRadius}"
                                  IsLoading="{Binding IsLoaded,Converter={x:Static BoolConverters.Not}}">
                <husk:Card Height="78" Background="{DynamicResource Layer0BackgroundBrush}">
                    <Grid ColumnDefinitions="Auto,8,*" RowDefinitions="Auto,*">
                        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                                CornerRadius="{StaticResource MediumCornerRadius}" ClipToBounds="True">
                            <Image Source="{Binding Thumbnail}" />
                        </Border>
                        <DockPanel Grid.Row="0" Grid.Column="2">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal"
                                        Spacing="4">
                                <TextBlock Text="{Binding Version}"
                                           VerticalAlignment="Center" FontWeight="Bold" />
                            </StackPanel>
                            <Grid ColumnDefinitions="Auto,6,*">
                                <husk:Tag Grid.Column="0"
                                          CornerRadius="{StaticResource SmallCornerRadius}">
                                    <TextBlock Text="{Binding Kind}" />
                                </husk:Tag>
                                <TextBlock Grid.Column="2" Text="{Binding Name}"
                                           TextTrimming="CharacterEllipsis"
                                           FontSize="{StaticResource LargeFontSize}"
                                           FontWeight="Bold" />
                            </Grid>
                        </DockPanel>
                        <DockPanel Grid.Row="1" Grid.Column="2">
                            <StackPanel DockPanel.Dock="Right" Orientation="Horizontal"
                                        VerticalAlignment="Bottom" Spacing="4">
                                <Button Classes="Small"
                                        Theme="{StaticResource OutlineButtonTheme}">
                                    <icons:PackIconLucide Kind="Pen" Width="12" />
                                </Button>
                                <Button Classes="Small"
                                        Theme="{StaticResource OutlineButtonTheme}">
                                    <icons:PackIconLucide Kind="Ellipsis" Width="12" />
                                </Button>
                            </StackPanel>
                            <TextBlock Text="{Binding Summary}"
                                       MaxLines="2"
                                       TextWrapping="Wrap" TextTrimming="CharacterEllipsis" />
                        </DockPanel>
                    </Grid>
                </husk:Card>
            </husk:SkeletonControl>
        </DataTemplate>
        <DataTemplate x:Key="DraftPackageDataTemplate" DataType="m:InstancePackageModel">
            <husk:SkeletonControl Margin="0,2,0,2"
                                  CornerRadius="{StaticResource MediumCornerRadius}"
                                  IsLoading="{Binding IsLoaded,Converter={x:Static BoolConverters.Not}}">
                <husk:Card Background="{DynamicResource Layer0BackgroundBrush}" Height="64" Width="64">
                    <Border CornerRadius="{StaticResource MediumCornerRadius}" ClipToBounds="True">
                        <Image Source="{Binding Thumbnail}" />
                    </Border>
                </husk:Card>
            </husk:SkeletonControl>
        </DataTemplate>
    </controls:ScopedPage.Resources>
    <Grid ColumnDefinitions="*,12,Auto" RowDefinitions="Auto,0,*">
        <!-- 基本信息查看与更新、 Loader 切换 -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" ColumnDefinitions="*,8,Auto"
              Margin="{StaticResource PageContentMargin}">
            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Text="{Binding Basic.Name,FallbackValue=Name}"
                           FontSize="{StaticResource ExtraLargeFontSize}" />
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Minecraft:" />
                    <TextBlock Text="{Binding Basic.Version,FallbackValue=Version}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="Mod Loader:" />
                    <TextBlock Text="{Binding LoaderLabel,FallbackValue=None}" />
                    <HyperlinkButton Content="Switch" />
                </StackPanel>
                <husk:InfoBar Background="{DynamicResource Card3BackgroundBrush}">
                    <TextBlock Text="[Stage] and [Stash] apply items to deployment while [Draft] does not." />
                </husk:InfoBar>
            </StackPanel>
            <husk:Card Grid.Column="2" MaxWidth="360" BorderThickness="2"
                       BorderBrush="{DynamicResource ControlAccentBorderBrush}"
                       IsVisible="{Binding Reference,Converter={x:Static ObjectConverters.IsNotNull}}">
                <Grid RowDefinitions="*,8,Auto">
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="8">
                        <Border ClipToBounds="True" CornerRadius="{StaticResource SmallCornerRadius}">
                            <labs:AsyncImage Source="{Binding Reference.Thumbnail,FallbackValue={x:Null}}" Height="38"
                                             Width="38"
                                             Stretch="UniformToFill" />
                        </Border>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="{Binding Reference.Name,FallbackValue=Package Name}"
                                       FontSize="{StaticResource LargeFontSize}" />
                            <HyperlinkButton Command="{Binding OpenSourceUrlCommand}"
                                             CommandParameter="{Binding Reference.SourceUrl,FallbackValue={x:Null}}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <TextBlock
                                        Text="{Binding Reference.SourceLabel,FallbackValue=LABEL,Converter={x:Static huskc:StringConverters.ToUpper}}" />
                                    <fi:SymbolIcon Symbol="Open" FontSize="12" />
                                </StackPanel>
                            </HyperlinkButton>
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Row="2" ColumnDefinitions="*,8,Auto">
                        <ComboBox Grid.Column="0">
                            <ComboBoxItem>
                                <TextBlock Text="0.9.2" />
                            </ComboBoxItem>
                        </ComboBox>
                        <Button Grid.Column="2" Content="Update" />
                    </Grid>
                </Grid>
            </husk:Card>
        </Grid>
        <Panel Grid.Row="2" Grid.Column="0">
            <TabControl Padding="{StaticResource PageToplessBottomlessContentMargin}">
                <TabItem Header="Stage">
                    <cp:PackageContainer x:Name="StageContainer" DragDrop.AllowDrop="True" Items="{Binding Stage}"
                                         TotalCount="{Binding StageCount}"
                                         ItemTemplate="{StaticResource ActivePackageDataTemplate}" />
                </TabItem>
                <TabItem Header="Stash">
                    <cp:PackageContainer x:Name="StashContainer" DragDrop.AllowDrop="True" Items="{Binding Stash}"
                                         TotalCount="{Binding StashCount}"
                                         ItemTemplate="{StaticResource ActivePackageDataTemplate}" />
                </TabItem>
            </TabControl>
        </Panel>
        <Panel Grid.Row="2" Grid.Column="2" Background="{DynamicResource Layer1BackgroundBrush}">
            <TabControl Padding="{StaticResource PageHeaderlessContentMargin}">
                <TabItem Header="Draft">
                    <ScrollViewer DragDrop.AllowDrop="True">
                        <ItemsControl x:Name="DraftContainer" Margin="{StaticResource PageToplessContentMargin}"
                                      ItemsSource="{Binding Draft}"
                                      ItemTemplate="{StaticResource DraftPackageDataTemplate}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Panel>
    </Grid>
</controls:ScopedPage>