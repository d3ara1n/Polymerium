<local:WidgetBase
    x:Class="Polymerium.App.Widgets.NoteWidget"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Polymerium.App.Widgets"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Note"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Icon="Note"
    mc:Ignorable="d">
    <local:WidgetBase.FullTemplate>
        <DataTemplate x:DataType="local:NoteWidget">
            <TextBox
                AcceptsReturn="True"
                AcceptsTab="True"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                Text="{Binding NoteText, Mode=TwoWay}"
                TextWrapping="Wrap"
                Theme="{StaticResource FieldTextBoxTheme}" />
        </DataTemplate>
    </local:WidgetBase.FullTemplate>
    <local:WidgetBase.SlimTemplate>
        <DataTemplate x:DataType="local:NoteWidget">
            <ScrollViewer>
                <TextBlock
                    Text="{Binding NoteText}"
                    TextWrapping="Wrap" />
            </ScrollViewer>
        </DataTemplate>
    </local:WidgetBase.SlimTemplate>
</local:WidgetBase>
