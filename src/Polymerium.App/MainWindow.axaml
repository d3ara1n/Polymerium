<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
        xmlns:lucide="using:LucideAvalonia"
        xmlns:ursa="https://irihi.tech/ursa"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Polymerium.App.MainWindow" ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        Title="Polymerium" MinHeight="459" MinWidth="600" Height="600" Width="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*" />
            <ColumnDefinition Width="35*" MaxWidth="400" MinWidth="200" />
        </Grid.ColumnDefinitions>
        <Panel Grid.Column="0">
            <husk:Frame x:Name="Root" Margin="24" />
        </Panel>
        <Grid Grid.Column="1">
            <Border x:Name="Sidebar" Margin="0,6,6,6" CornerRadius="6" Background="Transparent"
                    BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1"
                    PointerPressed="Sidebar_OnPointerPressed" DoubleTapped="Sidebar_OnDoubleTapped">
                <DockPanel>
                    <DockPanel DockPanel.Dock="Top">
                        <StackPanel DockPanel.Dock="Right">
                            <ursa:ButtonGroup Background="Transparent">
                                <Button x:Name="MinimizeButton" Click="MinimizeButton_OnClick">
                                    <lucide:Lucide Icon="Minus" Width="8" />
                                </Button>
                                <Button x:Name="ToggleMaximizeButton" Click="ToggleMaximizeButton_OnClick">
                                    <lucide:Lucide Icon="Square" Width="8" />
                                </Button>
                                <Button x:Name="CloseButton" Click="CloseButton_OnClick">
                                    <lucide:Lucide Icon="X" Width="8" />
                                </Button>
                            </ursa:ButtonGroup>
                        </StackPanel>
                        <StackPanel x:Name="Titlebar" Margin="12,12,12,0" Spacing="6" Orientation="Horizontal">
                            <lucide:Lucide Icon="Squirrel" Width="12" />
                            <TextBlock Text="{Binding $parent[Window].Title, Mode=OneWay}" VerticalAlignment="Center" />
                        </StackPanel>
                    </DockPanel>
                    <Grid Margin="16" DockPanel.Dock="Top" ColumnDefinitions="*,8,Auto"
                          RowDefinitions="Auto,8,Auto,8,Auto,8,Auto,8,*">
                        <Button Grid.Row="0" Grid.Column="0" Height="48" Theme="{StaticResource OutlineButtonTheme}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <lucide:Lucide Icon="Import" Height="18" VerticalAlignment="Center" />
                                <TextBlock Text="Import" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button Grid.Row="0" Grid.Column="2" Height="48" Width="48"
                                Theme="{StaticResource OutlineButtonTheme}">
                            <lucide:Lucide Icon="PackagePlus" Height="18" />
                        </Button>
                        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Classes="Primary"
                                Click="Button_OnClick"
                                Height="32">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <lucide:Lucide Icon="Store" Height="18" />
                                <TextBlock Text="Go to Exposition" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Separator Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="3" />
                        <StackPanel Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="3">
                            <!-- <AutoCompleteBox/> -->
                            <TextBox Watermark="Search by names or types" />
                        </StackPanel>
                        <ListBox Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" />
                    </Grid>
                </DockPanel>
            </Border>
        </Grid>
    </Grid>
</Window>