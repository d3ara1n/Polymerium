<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:lucide="using:LucideAvalonia"
                    xmlns:local="using:Polymerium.App.Controls">
    <Design.PreviewWith>
        <local:PageHeaderBar Width="128" Height="48" Title="Title"/>
    </Design.PreviewWith>
    <ControlTheme x:Key="{x:Type local:PageHeaderBar}" TargetType="local:PageHeaderBar">
        <Setter Property="Template">
            <ControlTemplate>
                <DockPanel>
                    <Button>
                        <lucide:Lucide Icon="ArrowLeft" Height="12" Width="12"/>
                    </Button>
                    <TextBlock Text="{TemplateBinding Title}"/>
                </DockPanel>
            </ControlTemplate>
        </Setter>
    </ControlTheme>
</ResourceDictionary>