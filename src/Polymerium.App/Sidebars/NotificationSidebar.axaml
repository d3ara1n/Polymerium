<husk:Sidebar
    x:Class="Polymerium.App.Sidebars.NotificationSidebar"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="380"
    Padding="0"
    d:DesignHeight="600"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,*">
        <Grid
            Grid.Row="0"
            Margin="{StaticResource SidebarBottomlessContentMargin}"
            ColumnDefinitions="*,Auto,Auto"
            ColumnSpacing="12">
            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="{StaticResource LargeFontSize}"
                FontWeight="{StaticResource ControlStrongFontWeight}"
                Text="Notifications" />
            <Button
                Classes="Small"
                Grid.Column="1"
                Theme="{StaticResource OutlineButtonTheme}">
                <husk:IconLabel
                    Icon="Checkmark"
                    Text="Mark all as read" />
            </Button>
            <Button
                Classes="Small"
                Grid.Column="2"
                Click="DimissButton_OnClick">
                <fi:SymbolIcon
                    FontSize="{StaticResource MediumFontSize}"
                    Symbol="Dismiss" />
            </Button>
        </Grid>
        <!--  临时模板  -->
        <ScrollViewer Grid.Row="1">
            <StackPanel
                Margin="{StaticResource SidebarContentMargin}"
                Spacing="6">
                <Border
                    MinHeight="64"
                    BoxShadow="0 0 5 0 #1F000000"
                    CornerRadius="{StaticResource LargeCornerRadius}">
                    <Border
                        Padding="12,8"
                        Background="{StaticResource OverlaySolidBackgroundBrush}"
                        BorderBrush="{StaticResource ControlDangerBorderBrush}"
                        BorderThickness="3,0,0,0"
                        CornerRadius="{Binding $parent[Border].CornerRadius}">
                        <Grid
                            ColumnDefinitions="Auto,*,Auto"
                            ColumnSpacing="12"
                            RowDefinitions="Auto,*,Auto"
                            RowSpacing="8">
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                FontWeight="{StaticResource ControlStrongFontWeight}"
                                Text="Hello World" />
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                Width="36"
                                Height="36"
                                VerticalAlignment="Top"
                                CornerRadius="{StaticResource SmallCornerRadius}"
                                RenderOptions.BitmapInterpolationMode="MediumQuality">
                                <Border.Background>
                                    <ImageBrush Source="/Assets/Icons/Desert.png" />
                                </Border.Background>
                            </Border>
                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="1"
                                Text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. "
                                TextWrapping="Wrap" />
                            <Button
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                Padding="4"
                                VerticalAlignment="Top">
                                <fi:SymbolIcon
                                    FontSize="{StaticResource SmallFontSize}"
                                    Symbol="MoreVertical" />
                            </Button>
                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal"
                                Spacing="8">
                                <Button
                                    Classes="Primary Small"
                                    Content="Read more" />
                                <Button
                                    Classes="Small"
                                    Content="Never again" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>
                <Border
                    MinHeight="64"
                    Padding="12,8"
                    Background="{StaticResource OverlaySolidBackgroundBrush}"
                    BorderBrush="{StaticResource ControlSuccessBorderBrush}"
                    BorderThickness="3,0,0,0"
                    CornerRadius="{StaticResource LargeCornerRadius}">
                    <Border.Effect>
                        <DropShadowEffect
                            BlurRadius="6"
                            OffsetX="0"
                            OffsetY="0"
                            Opacity="0.1" />
                    </Border.Effect>
                    <Grid
                        ColumnDefinitions="Auto,*,Auto"
                        ColumnSpacing="12"
                        RowDefinitions="Auto,*,Auto"
                        RowSpacing="8">
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="2"
                            FontWeight="{StaticResource ControlStrongFontWeight}"
                            Text="Hello World" />
                        <Border
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="36"
                            Height="36"
                            VerticalAlignment="Top"
                            CornerRadius="{StaticResource SmallCornerRadius}"
                            RenderOptions.BitmapInterpolationMode="MediumQuality">
                            <Border.Background>
                                <ImageBrush Source="/Assets/Icons/Desert.png" />
                            </Border.Background>
                        </Border>
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Text="Lorem ipsum dolor sit amet."
                            TextWrapping="Wrap" />
                        <Button
                            Grid.Row="0"
                            Grid.RowSpan="2"
                            Grid.Column="2"
                            Padding="4"
                            VerticalAlignment="Top">
                            <fi:SymbolIcon
                                FontSize="{StaticResource SmallFontSize}"
                                Symbol="MoreVertical" />
                        </Button>
                        <StackPanel
                            Grid.Row="2"
                            Grid.Column="1"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal"
                            Spacing="8">
                            <Button
                                Classes="Primary Small"
                                Content="Read more" />
                            <Button
                                Classes="Small"
                                Content="Never again" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</husk:Sidebar>
