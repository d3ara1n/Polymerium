<husk:Modal xmlns="https://github.com/avaloniaui"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
            xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
            xmlns:modals="clr-namespace:Polymerium.App.Modals"
            mc:Ignorable="d" Width="320"
            x:Class="Polymerium.App.Modals.TrophyModal">
    <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24">
        <fi:SymbolIcon Symbol="Trophy" FontSize="64" Foreground="#FFD700" HorizontalAlignment="Center" />
        <TextBlock Text="ACHIEVEMENT UNLOCKED!" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"
                   TextAlignment="Center" />
        <TextBlock Text="You found the secret code!" FontSize="14"
                   Foreground="{DynamicResource ControlSecondaryForegroundBrush}" HorizontalAlignment="Center"
                   TextAlignment="Center" />
        <Button Classes="Primary" HorizontalAlignment="Center" Margin="0,16,0,0"
                Command="{Binding $parent[modals:TrophyModal].Dismiss}">
            <TextBlock Text="Awesome!" />
        </Button>
    </StackPanel>
</husk:Modal>
