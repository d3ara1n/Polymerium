<husk:Dialog
    x:Class="Polymerium.App.Dialogs.TagPickerDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:lang="https://github.com/d3ara1n/Polymerium/Languages"
    xmlns:local="using:Polymerium.App.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Static lang:Resources.TagPickerDialog_Title}"
    Width="360"
    d:DesignHeight="400"
    d:DesignWidth="360"
    IsPrimaryButtonVisible="True"
    Message="{x:Static lang:Resources.TagPickerDialog_Prompt}"
    mc:Ignorable="d">
    <Grid RowDefinitions="Auto,Auto,*" RowSpacing="12">
        <!--  输入框  -->
        <TextBox
            Grid.Row="0"
            Text="{Binding $parent[local:TagPickerDialog].Result, Mode=TwoWay}"
            Watermark="{x:Static lang:Resources.TagPickerDialog_InputTextBoxPlaceholder}" />

        <!--  现有标签标题  -->
        <TextBlock
            Grid.Row="1"
            FontSize="{StaticResource SmallFontSize}"
            Foreground="{StaticResource ControlSecondaryForegroundBrush}"
            IsVisible="{Binding $parent[local:TagPickerDialog].HasExistingTags}"
            Text="{x:Static lang:Resources.TagPickerDialog_ExistingTagsLabelText}" />

        <!--  现有标签列表  -->
        <ScrollViewer Grid.Row="2" MaxHeight="200">
            <Panel>
                <!--  空状态  -->
                <StackPanel
                    VerticalAlignment="Center"
                    IsVisible="{Binding !$parent[local:TagPickerDialog].HasExistingTags}"
                    Spacing="8">
                    <fi:SymbolIcon
                        HorizontalAlignment="Center"
                        FontSize="{StaticResource LargeFontSize}"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Symbol="Tag" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="{StaticResource MediumFontSize}"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="{x:Static lang:Resources.TagPickerDialog_NoExistingTagsLabelText}" />
                </StackPanel>

                <!--  标签列表  -->
                <ItemsControl IsVisible="{Binding $parent[local:TagPickerDialog].HasExistingTags}" ItemsSource="{Binding $parent[local:TagPickerDialog].ExistingTags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel ItemSpacing="6" LineSpacing="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="x:String">
                            <Button
                                Padding="8,4"
                                Command="{Binding $parent[local:TagPickerDialog].SelectTagCommand}"
                                CommandParameter="{Binding}"
                                Theme="{StaticResource OutlineButtonTheme}">
                                <StackPanel Orientation="Horizontal" Spacing="4">
                                    <fi:SymbolIcon FontSize="{StaticResource SmallFontSize}" Symbol="Tag" />
                                    <TextBlock Text="{Binding}" />
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Panel>
        </ScrollViewer>
    </Grid>
</husk:Dialog>
