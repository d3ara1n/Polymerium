<husk:Dialog
    x:Class="Polymerium.App.Dialogs.UserInputDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:lang="https://github.com/d3ara1n/Polymerium/Languages"
    xmlns:local="using:Polymerium.App.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="{x:Static lang:Resources.UserInputDialog_Title}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    IsPrimaryButtonVisible="True"
    Message="{x:Static lang:Resources.UserInputDialog_Prompt}"
    mc:Ignorable="d">
    <TextBox Text="{Binding $parent[local:UserInputDialog].Result, Mode=TwoWay}" Watermark="{Binding $parent[local:UserInputDialog].Watermark}" />
</husk:Dialog>
