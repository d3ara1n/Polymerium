<husk:Dialog
    x:Class="Polymerium.App.Dialogs.LoaderEditorDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fi="clr-namespace:FluentIcons.Avalonia;assembly=FluentIcons.Avalonia"
    xmlns:husk="https://github.com/d3ara1n/Huskui.Avalonia"
    xmlns:lang="https://github.com/d3ara1n/Polymerium/Languages"
    xmlns:local="clr-namespace:Polymerium.App.Dialogs"
    xmlns:m="clr-namespace:Polymerium.App.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="460"
    IsPrimaryButtonVisible="True"
    mc:Ignorable="d">
    <husk:SwitchPresenter TargetType="x:Boolean" Value="{Binding $parent[local:LoaderEditorDialog].SelectedLoader, Converter={x:Static ObjectConverters.IsNotNull}, Mode=OneWay}">
        <husk:SwitchCase Value="True">
            <Grid RowDefinitions="*,12,Auto,4,Auto">
                <Border
                    Grid.Row="0"
                    Background="{StaticResource ControlTranslucentFullBackgroundBrush}"
                    CornerRadius="{StaticResource MediumCornerRadius}">
                    <Grid Margin="3" ColumnDefinitions="*,4,Auto">
                        <Border
                            Grid.Column="0"
                            Background="{StaticResource OverlaySolidBackgroundBrush}"
                            CornerRadius="{StaticResource SmallCornerRadius}">
                            <Grid ColumnDefinitions="Auto,*">
                                <Border
                                    Grid.Column="0"
                                    Background="{StaticResource ControlTranslucentHalfBackgroundBrush}"
                                    CornerRadius="{Binding Source={StaticResource SmallCornerRadius}, Converter={x:Static husk:CornerRadiusConverters.Left}}">
                                    <Image
                                        Width="36"
                                        Height="36"
                                        Margin="12"
                                        Source="{Binding $parent[local:LoaderEditorDialog].Loader.Thumbnail, FallbackValue={x:Null}}" />
                                </Border>
                                <StackPanel
                                    Grid.Column="1"
                                    Margin="16,0"
                                    VerticalAlignment="Center">
                                    <TextBlock
                                        FontSize="{StaticResource LargeFontSize}"
                                        FontWeight="{StaticResource ControlStrongFontWeight}"
                                        Text="{Binding $parent[local:LoaderEditorDialog].Loader.Display, FallbackValue=Loader}" />
                                    <TextBlock Foreground="{StaticResource ControlSecondaryForegroundBrush}" Text="{Binding $parent[local:LoaderEditorDialog].Loader.Id, FallbackValue=Identity}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Button
                            Grid.Column="2"
                            Classes="Small"
                            Click="RemoveButton_OnClick"
                            IsCancel="True"
                            Theme="{StaticResource GhostButtonTheme}">
                            <fi:SymbolIcon
                                VerticalAlignment="Center"
                                FontSize="{StaticResource MediumFontSize}"
                                Symbol="Dismiss" />
                        </Button>
                    </Grid>
                </Border>
                <TextBlock Grid.Row="2" Text="{x:Static lang:Resources.LoaderEditorDialog_VersionLabelText}" />
                <husk:LazyContainer
                    Grid.Row="4"
                    MinHeight="36"
                    Source="{Binding $parent[local:LoaderEditorDialog].LazyVersions}">
                    <husk:LazyContainer.SourceTemplate>
                        <DataTemplate DataType="m:LoaderCandidateVersionCollectionModel">
                            <ComboBox
                                ItemsSource="{Binding Versions}"
                                SelectedValue="{Binding $parent[local:LoaderEditorDialog].SelectedVersion, Mode=TwoWay}"
                                SelectedValueBinding="{Binding Version}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate DataType="m:LoaderCandidateVersionModel">
                                        <husk:SwitchPresenter TargetType="x:Boolean" Value="{Binding IsRecommended}">
                                            <husk:SwitchCase Value="True">
                                                <TextBlock
                                                    VerticalAlignment="Center"
                                                    Foreground="{StaticResource ControlAccentForegroundBrush}"
                                                    Text="{Binding Version}" />
                                            </husk:SwitchCase>
                                            <husk:SwitchCase Value="False">
                                                <TextBlock VerticalAlignment="Center" Text="{Binding Version}" />
                                            </husk:SwitchCase>
                                        </husk:SwitchPresenter>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </DataTemplate>
                    </husk:LazyContainer.SourceTemplate>
                    <husk:LazyContainer.FaultContent>
                        <ComboBox IsEnabled="False" SelectedIndex="0">
                            <ComboBoxItem Content="{x:Static lang:Resources.Error_BadNetwork}" />
                        </ComboBox>
                    </husk:LazyContainer.FaultContent>
                </husk:LazyContainer>
            </Grid>
        </husk:SwitchCase>
        <husk:SwitchCase Value="False">
            <Grid Margin="24,32,24,12" RowDefinitions="Auto,24,Auto">
                <StackPanel Grid.Row="0" Spacing="6">
                    <fi:SymbolIcon
                        HorizontalAlignment="Center"
                        FontSize="{StaticResource ExtraLargeFontSize}"
                        Symbol="VehicleTractor" />
                    <TextBlock HorizontalAlignment="Center" Text="{x:Static lang:Resources.LoaderEditorDialog_NoLoaderText}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        Foreground="{StaticResource ControlSecondaryForegroundBrush}"
                        Text="{x:Static lang:Resources.LoaderEditorDialog_NoLoaderPrompt}" />
                </StackPanel>
                <Button
                    Name="AddLoaderButton"
                    Grid.Row="2"
                    HorizontalAlignment="Center"
                    Click="AddLoaderButton_OnClick">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <fi:SymbolIcon FontSize="{StaticResource MediumFontSize}" Symbol="Add" />
                        <TextBlock Text="{x:Static lang:Resources.LoaderEditorDialog_AddLoaderButtonText}" />
                    </StackPanel>
                </Button>
            </Grid>
        </husk:SwitchCase>
    </husk:SwitchPresenter>
</husk:Dialog>
