<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="using:System">
    <!-- Animations -->
    <sys:TimeSpan x:Key="ControlFastestAnimationDuration">0:0:0.15</sys:TimeSpan>
    <sys:TimeSpan x:Key="ControlFasterAnimationDuration">0:0:0.2</sys:TimeSpan>
    <sys:TimeSpan x:Key="ControlNormalAnimationDuration">0:0:0.3</sys:TimeSpan>

    <!-- Float Layers Opacity -->
    <sys:Double x:Key="Overlay1Opacity">0.2</sys:Double>
    <sys:Double x:Key="Overlay2Opacity">0.4</sys:Double>
    <sys:Double x:Key="OverlayFullOpacity">1.0</sys:Double>
    <sys:Double x:Key="ControlDimOpacity">0.4</sys:Double>

    <CornerRadius x:Key="ControlCornerRadius">4</CornerRadius>
</ResourceDictionary>