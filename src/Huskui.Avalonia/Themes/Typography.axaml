<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="using:System">
    <Design.PreviewWith>
        <Panel>
            <Grid Margin="24" ColumnDefinitions="*">
                <StackPanel Grid.Column="0">
                    <TextBlock FontSize="{StaticResource ExtraSmallFontSize}" Text="Extra Small Font Size" />
                    <TextBlock FontSize="{StaticResource SmallFontSize}" Text="Small Font Size" />
                    <TextBlock FontSize="{StaticResource MediumFontSize}" Text="Medium Font Size" />
                    <TextBlock FontSize="{StaticResource LargeFontSize}" Text="Large Font Size" />
                    <TextBlock FontSize="{StaticResource ExtraLargeFontSize}" Text="Extra Large Font Size" />
                </StackPanel>
            </Grid>
        </Panel>
    </Design.PreviewWith>
    <sys:Double x:Key="ExtraSmallFontSize">8</sys:Double>
    <sys:Double x:Key="SmallFontSize">10</sys:Double>
    <sys:Double x:Key="MediumFontSize">12</sys:Double>
    <sys:Double x:Key="LargeFontSize">16</sys:Double>
    <sys:Double x:Key="ExtraLargeFontSize">24</sys:Double>
</ResourceDictionary>