<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.1.4"/>
        <PackageReference Include="Irihi.Ursa" Version="1.5.0"/>
    </ItemGroup>

    <ItemGroup>
        <AvaloniaResource Include="Assets\**"/>
    </ItemGroup>

    <ItemGroup>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-Black.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-Bold.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-ExtraBold.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-ExtraLight.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-Light.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-Medium.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-Regular.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-SemiBold.ttf"/>
        <UpToDateCheckInput Remove="Assets\Fonts\Outfit\Outfit-Thin.ttf"/>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Assets\Fonts\"/>
    </ItemGroup>
</Project>
